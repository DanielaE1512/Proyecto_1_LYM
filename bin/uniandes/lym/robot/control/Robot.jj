	{
	  String j;
	}
	{
	  < O >
	  { j= token.image;
	  	int dir = 2;
	  	int facing = 10;

		if ( j.equalsIgnoreCase("north")) {
		  dir = 0;}
		else if ( j.equalsIgnoreCase("south")) {
		  dir = 1;}
		else if ( j.equalsIgnoreCase("west")) {
		  dir = 3;}

		
	  	while ( dir != facing) {
	  	  world.turnRight();
	  	  facing = world.getFacing(); }

	  	return "posible";
	 } }

