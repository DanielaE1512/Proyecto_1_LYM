void walk():
	{
	  int x;
	  String Dir = null;
	  String Ori = null;
	}
	{
	  < WALK >"(" x = value()("," (Dir = Direccion() | Ori= Orientation()))?")"
	  { if (Ori != null )
	  	{ world.moveForward(x,false);}
	  	else if ( Dir != null )
	  		{ for ( int i = 1; i <= x; i++)
	  			{ if ( Dir.equalsIgnoreCase("right")) {
			  		world.right();}
				  else if ( Dir.equalsIgnoreCase("left")) {
			  		world.left();}
			      else if ( Dir.equalsIgnoreCase("front")) {
			  		world.up();}
			      else { world.down(); }}}
		else { world.moveForward(x,false);}
	  }
	}

void leap():
	{
	  int x;
	  String Dir = null;
	  String Ori = null;
	}
	{
	  < LEAP >"(" x = value() ("," (Dir = Direccion() | Ori= Orientation()))?")"
	  { if (Ori!= null )
	  	{ world.moveForward(x,true);}
	  	else if ( Dir != null )
	  		{ for ( int i = 1; i <= x; i++)
	  			{ if ( Dir.equalsIgnoreCase("right")) {
			  		world.right();}
				  else if ( Dir.equalsIgnoreCase("left")) {
			  		world.left();}
			      else if ( Dir.equalsIgnoreCase("front")) {
			  		world.up();}
			      else { world.down(); }}}
		else { world.moveForward(x,true);}
	  }
	}


